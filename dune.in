(copy_files# %VERSION%/*.ml{,i})
(copy_files# %VERSION%/test/*.ml{,i})


(env
 (dev
  (flags (:standard -w A-3-4-34-32-39-40-41-42-44-45-48-49-50-57))
  (ocamlopt_flags (-g -Oclassic)))
 (release
  (flags (:standard -w A-3-4-34-32-39-40-41-42-44-45-48-49-50-57))
  (ocamlopt_flags (-O3))))


(library
